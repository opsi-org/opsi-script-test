	message "HexStrToDecStr"
	set $ConstTest$ = "1031"
	set $tmp$ = "0x0407"
	set $CompValue$ = HexStrToDecStr($tmp$)
	if ($ConstTest$ = $CompValue$)
		comment "passed"
	else
		set $TestResult$ = "not o.k."
		LogWarning "failed"
	endif

	comment ""
	comment "-------------------------------------"
	comment "Testing: "
